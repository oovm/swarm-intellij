<idea-plugin>
	<id>Swarm</id>
	<name>Swarm Support</name>
	<vendor>oovm</vendor>
	<depends>com.intellij.modules.platform</depends>
	<!--	<depends optional="true" config-file="plugin-with-rust.xml">org.rust.lang</depends>-->
	<resource-bundle>messages.SwarmBundle</resource-bundle>
	<extensions defaultExtensionNs="com.intellij">
		<fileType
			name="Swarm"
			language="Swarm"
			extensions="swarm;larva"
			implementationClass="swarm.intellij.language.file.SwarmFileType"
			fieldName="INSTANCE"
		/>
		<lang.parserDefinition
			language="Swarm"
			implementationClass="swarm.intellij.language.SwarmParserDefinition"
		/>
		<!-- Highlighter -->
		<colorSettingsPage implementation="swarm.intellij.ide.highlight.HighlightSettingPage"/>
		<lang.syntaxHighlighter
			language="Swarm"
			implementationClass="swarm.intellij.ide.highlight.HighlightToken"
		/>
		<highlightVisitor implementation="swarm.intellij.ide.highlight.HighlightAST"/>
		<additionalTextAttributes scheme="Default" file="colors/SwarmDefault.xml"/>
		<additionalTextAttributes scheme="Darcula" file="colors/SwarmDarcula.xml"/>
		<!-- Formatter -->
		<langCodeStyleSettingsProvider
			implementation="swarm.intellij.ide.codeStyle.LanguageCodeStyleSettingsProvider"
		/>
		<lang.commenter
			language="Swarm"
			implementationClass="swarm.intellij.ide.completion.Commenter"
		/>
		<lang.braceMatcher
			language="Swarm"
			implementationClass="swarm.intellij.ide.braces.BraceMatcher"
		/>
		<lang.quoteHandler
			language="Swarm"
			implementationClass="swarm.intellij.ide.QuoteHandler"
		/>
		<!-- Structure View -->
		<lang.foldingBuilder
			language="Swarm"
			implementationClass="swarm.intellij.ide.folding.FoldingBuilder"
		/>
		<indexPatternBuilder
			implementation="swarm.intellij.ide.todo.TodoIndexPatternBuilder"
		/>
		<todoIndexer
			filetype="Swarm"
			implementationClass="swarm.intellij.ide.todo.TodoIndexer"
		/>
		<completion.contributor
			language="Swarm"
			implementationClass="swarm.intellij.ide.completion.CompletionContributor"
		/>
		<annotator
			language="Swarm"
			implementationClass="swarm.intellij.ide.annotator.HighlightingAnnotator"
		/>
		<annotator
			language="Swarm"
			implementationClass="swarm.intellij.ide.annotator.checkers.SwarmScopeCheckerAnnotator"
		/>
		<annotator
			language="Swarm"
			implementationClass="swarm.intellij.ide.annotator.checkers.SwarmTableCheckerAnnotator"
		/>

		<lang.formatter
			language="Swarm"
			implementationClass="swarm.intellij.ide.formatter.FormatModel"
		/>
		<lang.smartEnterProcessor
			language="Swarm"
			implementationClass="swarm.intellij.ide.assist.fixers.VomlSmartEnterProcessor"
		/>
	</extensions>
	<actions>
		<action
			id="swarm.intellij.ide.actions.CreateFile"
			class="swarm.intellij.ide.actions.CreateFile"
			text="Swarm File"
			description="Create new Swarm file"
		>
			<add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewFile"/>
		</action>
	</actions>
</idea-plugin>
